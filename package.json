{
  "name": "kuma-mieru",
  "description": "A 3rd-party Uptime Kuma monitoring dashboard built on Next.js 16, TypeScript and Recharts.",
  "version": "1.6.1",
  "author": "Alice39s",
  "license": "MPL-2.0",
  "homepage": "https://github.com/Alice39s/kuma-mieru",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alice39s/kuma-mieru.git"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run generate && npm run lint:fix && next dev --turbopack --port 3881",
    "start": "npm run generate && npx tsx ./scripts/init-start.ts && node .next/standalone/server.js",
    "start:docker": "npm run generate && npx tsx scripts/docker-init.ts && node ./server.js",
    "build": "npm run generate && next build",
    "build:analyze": "npm run generate && ANALYZE=true next build",
    "build:cloudflare": "CF_DEPLOYMENT=true npm run generate && opennextjs-cloudflare build",
    "deploy:cloudflare": "CF_DEPLOYMENT=true opennextjs-cloudflare deploy",
    "build:edgeone": "npm run generate && npx open-next build",
    "lint": "biome check .",
    "lint:fix": "biome check --write . && biome format --write .",
    "format": "biome format .",
    "generate": "npx tsx scripts/generate-config.ts && npx tsx scripts/generate-image-domains.ts && npx tsx scripts/banner.ts",
    "generate:config": "npx tsx scripts/generate-config.ts",
    "generate:domains": "npx tsx scripts/generate-image-domains.ts",
    "generate:banner": "npx tsx scripts/banner.ts"
  },
  "dependencies": {
    "@heroui/react": "^2.8.7",
    "@heroui/theme": "^2.4.25",
    "@mdx-js/mdx": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/bundle-analyzer": "^15.5.9",
    "@opennextjs/cloudflare": "^1.14.8",
    "@react-aria/ssr": "3.9.7",
    "@react-aria/visually-hidden": "3.8.20",
    "@sankyu/react-circle-flags": "^1.5.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.16.0",
    "chalk": "5.6.2",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "framer-motion": "^12.26.2",
    "intl-messageformat": "^10.7.18",
    "json5": "^2.2.3",
    "lucide-react": "^0.483.0",
    "markdown-it": "^14.1.0",
    "next": "^16.1.1",
    "next-intl": "^4.7.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^2.15.4",
    "sanitize-html": "^2.17.0",
    "sonner": "^2.0.7",
    "swr": "^2.3.8",
    "tailwind-merge": "^3.4.0",
    "tm-themes": "^1.10.15",
    "usehooks-ts": "^3.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@next/eslint-plugin-next": "15.3.0",
    "@react-types/shared": "3.28.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "22.13.14",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.29.1",
    "dotenv": "^16.6.1",
    "open-next": "^3.1.3",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "shiki": "^3.21.0",
    "tailwind-variants": "1.0.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.59.1"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@heroui/shared-utils",
    "esbuild",
    "sharp",
    "workerd"
  ]
}
